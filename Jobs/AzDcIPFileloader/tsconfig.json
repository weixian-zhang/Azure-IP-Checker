{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "rootDirs": [
      ".",
      "../../Shared"
    ],
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": false,
    "noImplicitAny": false,
    "paths": {
      "@shared/*": ["../../Shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/*"
  ],
  "extends": "../../tsconfig",
  "references": [
    {
        "path": "../../Shared"
    }
  ]
}
